<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="orderDetail"
            type="woowacourse.shopping.presentation.model.OrderDetailModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.orderdetail.OrderDetailActivity">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_order_detail_products"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_order_detail_total_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/order_detail_total_price"
            app:layout_constraintEnd_toStartOf="@id/tv_order_detail_total_price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_order_detail_products" />

        <TextView
            android:id="@+id/tv_order_detail_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/price_format(orderDetail.totalPrice)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_order_detail_total_price_text"
            app:layout_constraintTop_toTopOf="@id/tv_order_detail_total_price_text" />

        <TextView
            android:id="@+id/tv_order_detail_spend_point_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/order_detail_spend_point"
            app:layout_constraintEnd_toStartOf="@id/tv_order_detail_spend_point"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_order_detail_total_price" />

        <TextView
            android:id="@+id/tv_order_detail_spend_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(orderDetail.spendPoint)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_order_detail_spend_point_text"
            app:layout_constraintTop_toTopOf="@id/tv_order_detail_spend_point_text" />

        <TextView
            android:id="@+id/tv_order_detail_spend_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/order_detail_spend_price"
            app:layout_constraintEnd_toStartOf="@id/tv_order_detail_spend_price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_order_detail_spend_point" />

        <TextView
            android:id="@+id/tv_order_detail_spend_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/price_format(orderDetail.spendPrice)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_order_detail_spend_price_text"
            app:layout_constraintTop_toTopOf="@id/tv_order_detail_spend_price_text" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>