<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="cartProduct"
            type="woowacourse.shopping.presentation.model.CartProductInfoModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            app:strokeColor="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            app:strokeWidth="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:checked="@{cartProduct.ordered}"
                    android:id="@+id/checkbox_product_cart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/text_cart_product_name"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/checkbox_product_cart"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:text="@{cartProduct.productModel.name}"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="[든든] 동원 스위트콘" />

                <ImageView
                    android:id="@+id/image_cart_delete"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/close_16"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/text_cart_product_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginStart="7dp" />

                <ImageView
                    app:imageUrl="@{cartProduct.productModel.imageUrl}"
                    app:error="@{@drawable/default_image}"
                    android:id="@+id/image_cart_product_poster"
                    android:layout_width="136dp"
                    android:layout_height="72dp"
                    app:layout_constraintTop_toBottomOf="@id/text_cart_product_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="13dp"
                    android:layout_marginBottom="18dp"
                    android:layout_marginTop="13dp"
                    tools:src="@drawable/default_image" />

                <TextView
                    android:id="@+id/text_cart_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/counter_cart_product"
                    android:layout_marginEnd="13dp"
                    tools:text="99000원" />

                <woowacourse.shopping.presentation.common.CounterView
                    android:id="@+id/counter_cart_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:counterText="@{cartProduct.count}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="18dp"
                    android:layout_marginEnd="13dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
