<!-- custom_view_layout.xml -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_counter_minus"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:gravity="center"
                android:text="@string/counter_minus_text"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@id/text_counter_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_counter_number" />

            <TextView
                android:id="@+id/text_counter_number"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:gravity="center"
                tools:text="1"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintStart_toEndOf="@id/text_counter_minus"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_counter_plus"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:gravity="center"
                android:text="@string/counter_plus_text"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@id/text_counter_number"
                app:layout_constraintStart_toEndOf="@id/text_counter_number"
                app:layout_constraintTop_toTopOf="@id/text_counter_number" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
