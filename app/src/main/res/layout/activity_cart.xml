<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.cart.CartActivity">

    <data>

        <variable
            name="presenter"
            type="woowacourse.shopping.presentation.cart.CartContract.Presenter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar_cart"
            layout="@layout/toolbar_cart" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar_cart"
            app:layout_constraintBottom_toTopOf="@+id/container_order"
            android:id="@+id/scrollView2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:id="@+id/recycler_cart"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:layout_width="13dp"
                    app:layout_constraintTop_toBottomOf="@id/recycler_cart"
                    android:id="@+id/text_cart_page"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@{String.valueOf(presenter.paging.currentPage.value)}"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    tools:text="1" />

                <ImageView
                    android:id="@+id/button_minus_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_left_page_true"
                    app:layout_constraintTop_toTopOf="@+id/text_cart_page"
                    app:layout_constraintEnd_toStartOf="@+id/text_cart_page"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/text_cart_page" />

                <ImageView
                    android:id="@+id/button_plus_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_right_page_true"
                    app:layout_constraintTop_toTopOf="@+id/text_cart_page"
                    app:layout_constraintStart_toEndOf="@+id/text_cart_page"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/text_cart_page" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <FrameLayout
            android:id="@+id/fl_cart_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/container_order"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_cart">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include layout="@layout/item_cart_shimmer" />
                <include layout="@layout/item_cart_shimmer" />
                <include layout="@layout/item_cart_shimmer" />
                <include layout="@layout/item_cart_shimmer" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </FrameLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_order"
            android:background="@color/toolbar_background"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:layout_width="122dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:layout_height="match_parent"
                tools:text="주문하기(5)"
                android:text="@{@string/order_format(presenter.loadedCartProducts.orders.count)}"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="@color/secondary_color"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/button_cart_order" />

            <CheckBox
                android:checked="@{presenter.pageProducts.allOrdered}"
                android:onClick="@{()->presenter.changeCurrentPageProductsOrder()}"
                android:id="@+id/checkbox_all_cart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/text_all_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="@string/all_cart_check_box_text"
                app:layout_constraintTop_toBottomOf="@+id/checkbox_all_cart"
                app:layout_constraintStart_toStartOf="@+id/checkbox_all_cart"
                app:layout_constraintEnd_toEndOf="@+id/checkbox_all_cart" />

            <TextView
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="180000원"
                android:text="@{@string/price_format(presenter.loadedCartProducts.orders.totalPrice)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_cart_price"
                app:layout_constraintEnd_toStartOf="@+id/button_cart_order"
                android:layout_marginEnd="12dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="26dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
